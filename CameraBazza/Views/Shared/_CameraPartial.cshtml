@model CamerasListingModel
<div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-md-2">
                <img src="@Model.ImgUrl" alt="@Model.Model" class="img-responsive"/>
            </div>
            <div class="col-md-8">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <h3>@Model.Make - @Model.Model</h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <h3>$@Model.Price.ToString("F2")</h3>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <a asp-action="Details" asp-controller="Cameras" asp-route-id="@Model.Id">Details</a>
                    </div>
                    <div class="col-md-6 text-right">
                        @if (Model.Quantity>0)
                        {
                            <span class="text-success" style="color: green"><strong>IN STOCK</strong></span>
                        }
                        else
                        {
                            <span class="text-danger" style="color: red"><strong>OUT OF STOCK</strong></span>
                        }
                    </div>
                </div>
            </div>
            @if (this.User.GetUserId() != null && this.User.GetUserId() == Model.UserId)
            {
                <div class="col-md-2">
                    <a class="btn btn-info form-control" asp-action="Edit" asp-controller="Cameras" asp-route-id="@Model.Id">Edit</a>
                    <br/>
                    <a class="btn btn-warning form-control" asp-action="Delete" asp-controller="Cameras" asp-route-id="@Model.Id">Delete</a>
                </div>
            }
        </div>
    </div>
</div>