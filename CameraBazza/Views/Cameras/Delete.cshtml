@model CamerasDetailModel
@{
   ViewData["Title"] = "Delete Camera";
}

<h2>Camera</h2>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Delete the @Model.Make - @Model.Model camera.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make"></label>
                <select class="form-control" asp-for="Make" asp-items="Html.GetEnumSelectList<CameraMake>()" readonly="readonly"></select>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" readonly="readonly" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" min="0" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinShutterSpeed"></label>
                <input asp-for="MinShutterSpeed" min="1" max="30" class="form-control" readonly="readonly"/>
                <span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxShutterSpeed"></label>
                <input asp-for="MaxShutterSpeed" min="2000" max="8000" class="form-control" readonly="readonly"/>
                <span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinISO"></label>
                <select class="form-control" asp-for="MinISO" asp-items="Html.GetEnumSelectList<MinISO>()" readonly="readonly"></select>
                <span asp-validation-for="MinISO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxISO"></label>
                <input asp-for="MaxISO" min="200" max="409600" step="100" class="form-control" readonly="readonly"/>
                <span asp-validation-for="MaxISO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFullFrame"></label>

                @Html.RadioButtonFor(m => m.IsFullFrame, Model?.IsFullFrame ?? true) Yes
                @Html.RadioButtonFor(m => m.IsFullFrame, Model?.IsFullFrame ?? false) No
                <span asp-validation-for="MaxISO" class="text-danger" readonly="readonly"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoResolution"></label>
                <input asp-for="VideoResolution" class="form-control" readonly="readonly"/>
                <span asp-validation-for="VideoResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LightMeterings"></label>
                @foreach (var enumValue in Enum.GetValues(typeof(LightMetering)).Cast<LightMetering>())
                {
                <input type="checkbox" name="@nameof(LightMetering)s" value="@((int)enumValue)" readonly="readonly" /> @: @enumValue.ToDisplayName() 
                }

                <span asp-validation-for="LightMeterings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" readonly="readonly" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl"></label>
                <input asp-for="ImgUrl" class="form-control" readonly="readonly"/>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="col-md-12" align="right">
                <button type="submit" asp-action="Destroy"  asp-route-id="@Model.Id" class="btn btn-danger text-center">Delete</button>
            </div>
        </form>
    </div>
</div>

