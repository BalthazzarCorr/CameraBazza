@model CamerasDetailModel
@{
   ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="col-md-12">

    <h1 class="col-md-12">@($"{Model.Make} {Model.Model} - ${Model.Price} - ")
    <span>
            @if (Model.Quantity > 0)
            {
                <p style="color: green">IN STOCK</p>
            }
            else
            {
                <p style="color: red">OUT OF STOCK</p>
            }
        </span>
</h1>
<h2 class="col-md-12"><a asp-action="Details" asp-controller="User" asp-route-id="@Model.UserId">@Model.Username</a></h2>
<div class="col-md-3">
    <img src="@Model.ImgUrl" class="img-responsive" alt="@Model.Model" />
</div>
<div class="col-md-12">
    <div class="col-md-12">
        <label asp-for="@Model.IsFullFrame" class="col-md-3"></label>
        <div class="col-md-9">
            @(Model.IsFullFrame ? "Yes" : "No")
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.MinShutterSpeed" class="col-md-3"></label>
        <div class="col-md-9">
            @(Model.MinShutterSpeed)"
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.MaxShutterSpeed" class="col-md-3"></label>
        <div class="col-md-9">
            @(Model.MaxShutterSpeed)
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.MinISO" class="col-md-3"></label>
        <div class="col-md-9">
            @(Model.MinISO)"
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.MaxISO" class="col-md-3"></label>
        <div class="col-md-9">
            @(Model.MaxISO)"
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.VideoResolution" class="col-md-3"></label>
        <div class="col-md-9">
            @(Model.VideoResolution)
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.LightMeterings" class="col-md-3"></label>
        <div class="col-md-9">
            @string.Join(", ", Model.LightMeterings)
        </div>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.Description" class="col-md-3"></label>
        <div class="col-md-9">
            @Model.Description
        </div>
    </div>
</div>
</div>